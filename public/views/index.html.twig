{% extends "layouts/master.html.twig" %}

{% block header %}
{% endblock %}

{% block content %}

<br/><br/>

<div class="container">
	<div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="custom-search-input">
							<form method="post" action="index.php">
                <div class="input-group col-md-12">
                    <input type="text" id="inputKljuc" class="form-control input-lg" name="room_key" placeholder="Unesi ključ sobe" value="{{ room_key ? room_key : "" }}" />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" id="btn1" type="submit">
                            Enter
                        </button>
                    </span>
                </div>
								</form>
            </div>
        </div>
	</div>
</div>

{% endblock %}

{% block footer %}
<script>
var input1 = document.getElementById("inputKljuc");
input1.addEventListener("keyup", function(event) {
  event.preventDefault();
  if (event.keyCode === 13) {
      document.getElementById("btn1").submit();
  }
});
</script>
{% endblock %}
