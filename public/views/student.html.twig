                <input type='radio' value='1' name='emotion' id='radioSmile'/>
                <span for='radioSmile' class="raspClass"><button type="button" class="btn btn-success btn-circle btn-xl"><i class="fa fa-smile-o fa-5x"></i></button></span>

                <input type='radio' value='2' name='emotion' id='radioMeh'/>
