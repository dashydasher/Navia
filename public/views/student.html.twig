                                <label for="radio4">Profesor ima previše digresija</label>
                            </div>
                            <div class="funkyradio-success">
                                <input type="radio" name="razlog" id="radio5" value="Osobni razlog" />
                                <label for="radio5">Osobni razlog</label>
                            </div>
                              <br>
                              <div align="center">
                           <button id="razlog-submit" class="btn btn-default ">Pošalji</button>
