{% extends "layouts/master.html.twig" %}

{% block header %}

    <!-- kaj od toga je potrebno?? -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
      <link rel="stylesheet" href="public/css/main.css">

{% endblock %}

{% block content %}


<div class="container-fluid">
    {% include 'layouts/teacher-navbar.html.twig' %}
  <div class="main-wrapper">
<br/>
<!-- <div class="pdiv1">
  <h1>NAVIA</h1>
  </div>
 <div id="my-name-div" class="pdiv2"> {{ name }}</div> -->
  <br/>
  <hr/>
    <form method="post" action="room-create.php">
        <h5>Kreiraj novu sobu</h5> <br>
        <input name="room-name" class="form-control " required placeholder="Opis sobe"><br>
        <input name="room-token" class="form-control "placeholder="Ključ sobe (prazno -> random ključ)"><br>
        <button type="submit" class="btn btn-primary">Kreiraj</button>
    </form>
    <br><hr/><br>
    <div class="mojeSobe">
    <h5>Moje sobe</h5> <br>
    <ul>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Opis</th>
              <th scope="col">Ključ</th>
              <th scope="col">Vrijeme</th>
            </tr>
          </thead>
          <tbody>
          {% for room in rooms %}
              <tr>
                <th scope="row">{{ loop.index }}</th>
                <td><a href="room.php?id={{ room.id }}">{{ room.description }}</a></td>
                <td>{{ room.key }}</td>
                <td>{{ room.time }}</td>
              </tr>
          {% endfor %}
          </tbody>
        </table>
    </ul>
  </div>
</div>
</div>
</div>

{% endblock %}

{% block footer %}
{% endblock %}
